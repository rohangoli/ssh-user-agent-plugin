<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.jenkins-ci.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>3.19</version>
  </parent>

  <artifactId>ssh-user-agent</artifactId>
  <version>1.0</version>
  <packaging>hpi</packaging>

  <name>SSH User Agent plugin</name>
  <url>https://wiki.jenkins.io/display/JENKINS/SSH+User+Agent+plugin</url>
  <description>Allows to launch user specific agents over SSH, inherited from SSH Slaves Plugin</description>

  <licenses>
    <license>
      <name>MIT License</name>
      <url>https://opensource.org/licenses/MIT</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <properties>
    <jenkins.version>2.89.4</jenkins.version>
    <java.level>8</java.level>
    <maven.test.skip>true</maven.test.skip>
  </properties>

  <developers>
    <developer>
      <id>rohangoli</id>
      <name>Rohan Goli</name>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
  </developers>

  <scm>
    <connection>scm:git:git://github.com/rohangoli/ssh-user-agent-plugin.git</connection>
    <developerConnection>scm:git:git@github.com:rohangoli/ssh-user-agent-plugin.git</developerConnection>
    <url>https://github.com/rohangoli/ssh-user-agent-plugin</url>
    <tag>HEAD</tag>
  </scm>

  <repositories>
    <repository>
      <id>repo.jenkins-ci.org</id>
      <url>http://repo.jenkins-ci.org/public/</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>repo.jenkins-ci.org</id>
      <url>http://repo.jenkins-ci.org/public/</url>
    </pluginRepository>
  </pluginRepositories>

  <dependencies>
    <!-- plugin dependencies -->
    <dependency>
      <groupId>org.jenkins-ci.plugins</groupId>
      <artifactId>trilead-api</artifactId>
      <version>1.0.0</version>
    </dependency>
    <dependency>
      <groupId>org.jenkins-ci.plugins</groupId>
      <artifactId>credentials</artifactId>
      <version>2.3.19</version>
    </dependency>
    <dependency>
      <groupId>org.jenkins-ci.plugins</groupId>
      <artifactId>ssh-credentials</artifactId>
      <version>1.14</version>
    </dependency>
    <dependency>
      <groupId>org.jenkins-ci.test</groupId>
      <artifactId>docker-fixtures</artifactId>
      <version>1.8</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.jenkins-ci.tools</groupId>
        <artifactId>maven-hpi-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <!--
            * [JENKINS-51876] Updated core, Java version, and dependencies
            * [JENKINS-47586] Remove old JDK installer from the plugin
          -->
          <compatibleSinceVersion>1.27</compatibleSinceVersion>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
